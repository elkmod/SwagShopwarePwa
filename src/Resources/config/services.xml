<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Controllers -->

        <service id="SwagVueStorefront\VueStorefront\Controller\RouteController" public="true">
            <argument id="SwagVueStorefront\VueStorefront\Entity\SalesChannelRoute\SalesChannelRouteRepository" type="service"/>
            <argument id="Shopware\Core\Framework\DataAbstractionLayer\Search\RequestCriteriaBuilder" type="service"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="SwagVueStorefront\VueStorefront\Controller\ContextController" public="true">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="SwagVueStorefront\VueStorefront\Controller\PageController" public="true">
            <argument type="service" id="SwagVueStorefront\VueStorefront\PageLoader\Context\PageLoaderContextBuilder"/>
            <argument type="tagged" tag="vsf.page_loader"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="SwagVueStorefront\VueStorefront\Controller\NavigationController" public="true">
            <argument type="service" id="SwagVueStorefront\VueStorefront\Entity\SalesChannelNavigation\SalesChannelNavigationRepository"/>
            <call method="setContainer">
                <argument id="service_container" type="service"/>
            </call>
        </service>

        <!-- Page loader context builder -->

        <service id="SwagVueStorefront\VueStorefront\PageLoader\Context\PageLoaderContextBuilder">
            <argument type="service" id="SwagVueStorefront\VueStorefront\PageLoader\Context\PathResolver"/>
        </service>

        <service id="SwagVueStorefront\VueStorefront\PageLoader\Context\PathResolver">
            <argument id="SwagVueStorefront\VueStorefront\Entity\SalesChannelRoute\SalesChannelRouteRepository" type="service"/>
        </service>


        <!-- Page loaders -->

        <service id="SwagVueStorefront\VueStorefront\PageLoader\ProductPageLoader">
            <argument id="sales_channel.product.repository" type="service"/>
            <argument type="service" id="SwagVueStorefront\VueStorefront\PageResult\Product\ProductPageResultHydrator"/>
            <argument id="Shopware\Core\Framework\DataAbstractionLayer\Search\RequestCriteriaBuilder" type="service"/>
            <argument id="Shopware\Core\Content\Product\SalesChannel\SalesChannelProductDefinition" type="service"/>
            <tag name="vsf.page_loader"/>
        </service>

        <service id="SwagVueStorefront\VueStorefront\PageLoader\NavigationPageLoader">
            <argument type="service" id="sales_channel.category.repository"/>
            <argument type="service" id="Shopware\Core\Content\Cms\SalesChannel\SalesChannelCmsPageLoader"/>
            <argument type="service" id="SwagVueStorefront\VueStorefront\PageResult\Navigation\NavigationPageResultHydrator"/>
            <argument type="service" id="Shopware\Core\Content\Category\CategoryDefinition"/>
            <tag name="vsf.page_loader"/>
        </service>

        <!-- Page hydrators -->

        <service id="SwagVueStorefront\VueStorefront\PageResult\Product\ProductPageResultHydrator"/>

        <service id="SwagVueStorefront\VueStorefront\PageResult\Navigation\NavigationPageResultHydrator">
            <argument type="service" id="Shopware\Storefront\Framework\Routing\Router"/>
            <argument type="tagged" tag="vsf.page_result.aggregation_result_hydrator"/>
        </service>

        <!-- Aggregation result hydrators -->

        <service id="SwagVueStorefront\VueStorefront\PageResult\Navigation\AggregationResultHydrator\EntityResultHydrator">
            <tag name="vsf.page_result.aggregation_result_hydrator"/>
        </service>

        <service id="SwagVueStorefront\VueStorefront\PageResult\Navigation\AggregationResultHydrator\TermsResultHydrator">
            <tag name="vsf.page_result.aggregation_result_hydrator"/>
        </service>

        <service id="SwagVueStorefront\VueStorefront\PageResult\Navigation\AggregationResultHydrator\StatsResultHydrator">
            <tag name="vsf.page_result.aggregation_result_hydrator"/>
        </service>

        <service id="SwagVueStorefront\VueStorefront\PageResult\Navigation\AggregationResultHydrator\MaxResultHydrator">
            <tag name="vsf.page_result.aggregation_result_hydrator"/>
        </service>


        <!-- Repositories -->
        <service id="SwagVueStorefront\VueStorefront\Entity\SalesChannelRoute\SalesChannelRouteRepository">
            <argument type="service" id="seo_url.repository"/>
        </service>

        <service id="SwagVueStorefront\VueStorefront\Entity\SalesChannelNavigation\SalesChannelNavigationRepository">
            <argument type="service" id="Shopware\Core\Content\Category\Service\NavigationLoader"/>
            <argument type="service" id="Shopware\Storefront\Framework\Routing\Router"/>
        </service>


        <!-- Storefront Controller Decorators -->
        <service id="SwagVueStorefront\VueStorefront\Controller\DecoratedCheckoutController" decorates="Shopware\Storefront\Controller\CheckoutController" public="true">
            <argument type="service" id="Shopware\Core\Checkout\Cart\SalesChannel\CartService"/>
            <argument type="service" id="Shopware\Storefront\Page\Checkout\Cart\CheckoutCartPageLoader"/>
            <argument type="service" id="Shopware\Storefront\Page\Checkout\Confirm\CheckoutConfirmPageLoader"/>
            <argument type="service" id="Shopware\Storefront\Page\Checkout\Finish\CheckoutFinishPageLoader"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\SalesChannel\OrderService"/>
            <argument type="service" id="Shopware\Core\Checkout\Payment\PaymentService"/>
            <argument type="service" id="Shopware\Storefront\Page\Checkout\Offcanvas\OffcanvasCartPageLoader"/>
            <argument type="service" id="order.repository"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <!-- Storefront Subscribers -->
        <service id="SwagVueStorefront\VueStorefront\Subscriber\ContextRedirectSubscriber">
            <argument type="service" id="request_stack"/>
            <tag name="kernel.event_subscriber"/>
        </service>

    </services>

</container>
